{
  "kind": "collectionType",
  "collectionName": "customers",
  "info": {
    "singularName": "customer",
    "pluralName": "customers",
    "displayName": "customer"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "first_name": {
      "type": "string",
      "required": true
    },
    "last_name": {
      "type": "string",
      "required": true
    },
    "email": {
      "type": "email",
      "required": true,
      "unique": true
    },
    "password": {
      "type": "password",
      "required": true,
      "minLength": 8
    },
    "orders": {
      "type": "json"
    },
    "image": {
      "allowedTypes": [
        "images"
      ],
      "type": "media",
      "multiple": false
    },
    "cart": {
      "type": "json",
      "required": false
    },
    "wishlist": {
      "type": "json"
    },
    "phone": {
      "type": "biginteger",
      "required": true,
      "unique": true
    }
  }
}
